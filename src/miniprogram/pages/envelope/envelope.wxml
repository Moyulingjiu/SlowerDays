<!--pages/envelope/envelope.wxml-->
<view class="all">
<van-cell-group>
  <van-cell title="信封" />
</van-cell-group>
</view>

<view wx:for="{{envelope}}" style="background: #ffffff;">
<!--内容信封展示-->
  <van-card price="{{item.price}}弹珠" desc="{{item.comments}}" title="信封" thumb="{{item.place}}" thumb-link="../shopDetail/shopDetail"
  >
    <view slot="footer">
    <van-button bindtap='goToPage' round type="info" size="mini" color="linear-gradient(to right, #4bb0ff, #6149f6)" >
    了解更多
    </van-button>
    </view>
  </van-card>
</view>
